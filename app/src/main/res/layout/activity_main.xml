<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    android:background="@drawable/gift"
    android:alpha="0.8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        android:text="Bem vindo ao Papai Noel dos Correios"
        android:textColor="#09f"
        android:textSize="27sp" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="left"
        android:text="E-mail:"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableRight="@drawable/ic_person"
        android:hint="Digite o e-mail"
        android:drawablePadding="30dp"
        android:inputType="text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="left"
        android:text="Senha:"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableRight="@drawable/ic_lock"
        android:drawablePadding="30dp"
        android:hint="Digite a senha"
        android:inputType="textPassword"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/btRegister"
        android:layout_marginBottom="90dp"
        android:layout_width="60dp"
        android:onClick="PaginaPrincipal"
        android:layout_height="60dp"
        android:background="@drawable/ic_arrow_" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:onClick="CadastrarPadrinho"
            android:id="@+id/btnNovoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginLeft="0dp"
            android:text="Novo UsuÃ¡rio"
            android:textColor="#09f"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:textStyle="italic" />
        <TextView
            android:onClick="FuncionarioUsuario"
            android:id="@+id/btnFuncionarioUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginLeft="0dp"
            android:text=""
            android:textColor="#09f"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>