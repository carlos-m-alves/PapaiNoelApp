<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svCad"
    android:fillViewport="true"
    tools:context=".NovoPedido">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBar"
            android:indeterminateDrawable="@drawable/progressbar"
            android:layout_width="match_parent"
            android:max="100"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llNovoPedido"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtNovoPedido"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOVO PEDIDO"
                android:textSize="24sp"
                android:layout_marginTop="8sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:hint="Digite o cpf"
                android:inputType="number"
                android:maxLength="11"
                android:visibility="invisible"
                android:id="@+id/acvNovoPedidoCpf"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:id="@+id/llBotoes"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnAdicionarSpinner"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:onClick="AdicionarSpinner"
                    android:layout_weight="1"
                    android:text="+"/>
                <Button
                    android:id="@+id/btnRemoverSpinner"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_weight="1"
                    android:onClick="RemoverSpinner"
                    android:text="-"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnNovoPedido"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:onClick="NovoPedido"
                android:text="OK"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>